{
	"name": "Simple Bamboo Monitor",
	"version": "0.4.4",
	"manifest_version": 2,
	"description": "Simple Bamboo Monitor",
	"background": {
		"scripts": ["js/lib/jquery-2.0.2.min.js", "js/lib/apiconnect.js", "js/bamboo_api.js", "js/browserAction.js", "js/app.js"]
	},
	"options_page": "options.html",
	"browser_action": {
		"default_icon": "images/logo_bamboo_small.png",
		"default_title": "Status"
	},
	"icons": {
		"48": "images/BAMBOO.png",
		"128": "images/bamboo128.png"
	},
	"permissions": [
		"storage",
		"notifications",
		"http://*/",
		"https://*/"
	],
	"web_accessible_resources": ["images/BAMBOO.png"]
}
